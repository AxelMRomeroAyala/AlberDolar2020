<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/text_question_usa" />

    <LinearLayout
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/usd_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/currency_usa"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="@string/hint_input_value"
            android:inputType="number|numberDecimal"
            android:singleLine="true"
            android:textSize="24sp"
            android:autofillHints="0.00" />

    </LinearLayout>


    <TextView
        android:id="@id/solidarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_field"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="@string/text_solidarity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/solidarity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_field"
        android:layout_alignBaseline="@+id/solidarity"
        android:layout_alignStart="@+id/claim_leater_value"
        android:layout_alignLeft="@+id/claim_leater_value"
        android:layout_toEndOf="@+id/solidarity"
        android:layout_toRightOf="@+id/solidarity"
        android:textSize="18sp"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/claim_leater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/solidarity"
        android:layout_marginHorizontal="25dp"
        android:text="@string/text_claim_leater"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/claim_leater_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solidarity"
        android:layout_toEndOf="@+id/claim_leater"
        android:layout_toRightOf="@+id/claim_leater"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/claim_leater"
        android:layout_margin="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_total"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textSize="36sp" />

    </LinearLayout>

</RelativeLayout>