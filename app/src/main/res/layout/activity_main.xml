<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:onClick="hideSoftKeyboard"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/titlebar"
        android:scaleType="centerCrop"
        android:src="@drawable/dolalber_maintitle" />

    <RelativeLayout
        android:id="@+id/mid_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginHorizontal="15dp"
        android:background="#CBFFFFFF"
        android:onClick="hideSoftKeyboard"
        android:paddingBottom="20dp">

        <RadioGroup
            android:id="@+id/mode_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/mode_direct"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:background="@drawable/mode_state"
                android:checked="true"
                android:gravity="center"
                android:button="@color/colorTransparent"
                android:drawableStart="@drawable/ic_money_selected"
                android:drawableLeft="@drawable/ic_money_selected"
                android:text="@string/mode_button_direct"
                android:textColor="@color/colorLight"
                android:textColorHighlight="@color/colorWhite"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/mode_credit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/mode_state"
                android:button="@color/colorTransparent"
                android:drawableStart="@drawable/ic_credit_card_selected"
                android:drawableLeft="@drawable/ic_credit_card"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/mode_button_credit"
                android:textColor="@color/colorLight"
                android:textColorHighlight="@color/colorWhite"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/mode_digital_services"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/mode_state"
                android:button="@color/colorTransparent"
                android:drawableStart="@drawable/ic_videogame_selected"
                android:drawableLeft="@drawable/ic_videogame_selected"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/mode_button_digital"
                android:textColor="@color/colorLight"
                android:textColorHighlight="@color/colorWhite"/>


        </RadioGroup>

        <TextView
            android:id="@+id/mode_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/mode_select"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/mode_text_direct_buy"
            android:textColor="#ffffff" />


        <LinearLayout
            android:id="@+id/input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mode_text"
            android:background="#CCffffff"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24sp" />


            <EditText
                android:id="@+id/input_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="0.00"
                android:hint="@string/hint_input_value"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/conversion_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_field"
            android:layout_marginBottom="20dp"
            android:background="#CCFFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/conversion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/text_conversion"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/volley_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_shape"
                android:drawableStart="@drawable/ic_edit"
                android:drawableLeft="@drawable/ic_edit"
                android:paddingHorizontal="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/official_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversion_field"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/text_official_clean"
            android:textSize="18sp" />


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversion_field"
            android:layout_alignStart="@+id/claim_later_field"
            android:layout_alignLeft="@+id/claim_later_field"
            android:layout_alignBottom="@+id/official_clean"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/official_clean"
            android:layout_toRightOf="@+id/official_clean">

            <TextView
                android:id="@+id/official_clean_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:lines="1"
                android:textSize="18sp" />


        </HorizontalScrollView>


        <TextView
            android:id="@id/solidarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/official_clean"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_solidarity"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/official_clean"
            android:layout_alignStart="@+id/claim_later_field"
            android:layout_alignLeft="@+id/claim_later_field"
            android:layout_alignBottom="@+id/solidarity"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/solidarity"
            android:layout_toRightOf="@+id/solidarity">

            <TextView
                android:id="@+id/solidarity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:lines="1"
                android:textSize="18sp" />

        </HorizontalScrollView>


        <TextView
            android:id="@+id/claim_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/solidarity"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_claim_later"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:id="@+id/claim_later_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/solidarity"
            android:layout_alignBottom="@id/claim_later"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/claim_later"
            android:layout_toRightOf="@+id/claim_later">

            <TextView
                android:id="@+id/claim_later_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:lines="1"
                android:textSize="18sp" />

        </HorizontalScrollView>


        <TextView
            android:id="@+id/iva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/claim_later"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_iva"
            android:textSize="18sp"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/iva_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/claim_later"
            android:layout_alignStart="@+id/claim_later_field"
            android:layout_alignLeft="@+id/claim_later_field"
            android:layout_alignBottom="@id/iva"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/iva"
            android:layout_toRightOf="@+id/iva"
            android:visibility="gone">

            <TextView
                android:id="@+id/iva_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:lines="1"
                android:textSize="18sp" />

        </HorizontalScrollView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mid_content"
        android:layout_marginHorizontal="15dp"
        android:background="#99000000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_direct_usd_ars"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/no_you_cant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/value_exceded"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/warn_cannot_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="@string/text_warning"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone" />


    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3671495094028103/4721993462" />

</RelativeLayout>

